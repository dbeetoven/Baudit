{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "airbnb/hooks"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "no-console": "warn",
    "no-eval": "error",
    "import/first": "error",
    "arrow-parens": "off",
    "import/no-cycle": "off",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-useless-catch": "off",
    "comma-dangle": "off",
    "no-param-reassign": "off",
    "operator-linebreak": [
      "error",
      "after"
    ],
    "jsx-quotes": "off",
    "react/prop-types": "warn",
    "no-shadow": "off",
    "react/forbid-prop-types": "off",
    "react/jsx-props-no-spreading": "off",
    "jsx-a11y/href-no-hash": "off",
    "react/jsx-one-expression-per-line": "off",
    "react/state-in-constructor": "off",
    "import/prefer-default-export": "off",
    "no-unused-vars": "warn",
    "valid-jsdoc": "warn",
    "react/button-has-type": [
      "error",
      {
        "reset": false
      }
    ],
    "jsx-a11y/anchor-is-valid": [ "error", { "components": [ "Link" ], "specialLink": [ "onClick", "to" ] } ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}
